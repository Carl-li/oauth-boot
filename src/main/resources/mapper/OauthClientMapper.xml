<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.isearch.oauth2.mapper.OauthClientMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.isearch.oauth2.model.OauthClient" id="oauthClientMap">
        <result property="id" column="ID"/>
        <result property="clientId" column="CLIENT_ID"/>
        <result property="resourceIds" column="RESOURCE_IDS"/>
        <result property="isSecretRequired" column="IS_SECRET_REQUIRED"/>
        <result property="clientSecret" column="CLIENT_SECRET"/>
        <result property="isScoped" column="IS_SCOPED"/>
        <result property="scope" column="SCOPE"/>
        <result property="authorizedgrantTypes" column="AUTHORIZEDGRANT_TYPES"/>
        <result property="registeredRedirectUri" column="REGISTERED_REDIRECT_URI"/>
        <result property="authorities" column="AUTHORITIES"/>
        <result property="isAutoapprove" column="IS_AUTOAPPROVE"/>
        <result property="accessTokenValiditySeconds" column="ACCESS_TOKEN_VALIDITY_SECONDS"/>
        <result property="refreshTokenValiditySeconds" column="REFRESH_TOKEN_VALIDITY_SECONDS"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
    </resultMap>
    <select id="findClientByClientId" resultMap="oauthClientMap">
        select * from t_oauth_client where CLIENT_ID=#{clientId}
    </select>
</mapper>
